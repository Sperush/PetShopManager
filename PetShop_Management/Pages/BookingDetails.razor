@page "/booking-details/{id:int}"
@using PetShop_Server.Models
@inject HttpClient Http
@inject NavigationManager Nav

<div class="container mt-4">
    <button class="btn btn-outline-secondary mb-3" @onclick="GoBack">
        <i class="bi bi-arrow-left"></i> Quay lại
    </button>

    @if (booking == null)
    {
        <div class="text-center"><div class="spinner-border"></div> Loading...</div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">HÓA ĐƠN DỊCH VỤ #@booking.Id</h4>
                <span class="badge bg-warning text-dark">@booking.Status</span>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5 class="text-primary">Thông Tin Khách Hàng</h5>
                        <p><strong>Họ tên:</strong> @booking.Customer?.Name</p>
                        <p><strong>SĐT:</strong> @booking.Customer?.Phone</p>
                        <p><strong>Địa chỉ:</strong> @booking.Customer?.Address</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <h5 class="text-primary">Thông Tin Thú Cưng</h5>
                        <p><strong>Tên bé:</strong> @booking.Pet?.Name</p>
                        <p><strong>Cân nặng:</strong> @(booking.Pet?.Weight) kg</p>
                        <p><strong>Ngày hẹn:</strong> @booking.BookingDate?.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>

                <h5 class="border-bottom pb-2">Chi Tiết Dịch Vụ</h5>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Tên Dịch Vụ</th>
                            <th class="text-end">Đơn Giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in booking.BookingDetails)
                        {
                            <tr>
                                <td>@detail.Service?.Name</td>
                                <td class="text-end">@detail.PriceAtBooking?.ToString("#,##0") đ</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td class="fw-bold text-end">TỔNG CỘNG:</td>
                            <td class="fw-bold text-end text-danger fs-5">
                                @booking.TotalAmount?.ToString("#,##0") đ
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Booking? booking;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Thay PORT
            booking = await Http.GetFromJsonAsync<Booking>($"https://localhost:7225/api/bookings/{Id}");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

    private void GoBack()
    {
        Nav.NavigateTo("/booking");
    }
}